<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cleaner.board.white.halloweenapp.view.DestinationFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/orangee"
        android:layout_margin="5dp"
        android:id="@+id/buttonBack">


    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/cardd"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/find"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="123 Candyland Ave, Mousse"
                android:id="@+id/address"
                android:textColor="@android:color/secondary_text_light"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/cals"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="(The Candy!)"
                android:id="@+id/candy"
                android:textColor="#777"
                android:layout_below="@+id/address"
                android:layout_alignParentStart="true"
                android:textStyle="italic"
                android:singleLine="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        tools:listitem="@android:layout/simple_list_item_1"
        android:layout_below="@+id/textView3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HIT THE BUTTON TO START!"
        android:id="@+id/hit"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/orangee"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DIRECTIONS"
        android:id="@+id/textView3"
        android:layout_below="@+id/cardd"
        android:layout_marginLeft="5dp"
        android:visibility="visible"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FIND ME MORE CANDY!!!"
        android:id="@+id/find"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />


</RelativeLayout>
